<!-- sections/ct-slider-cart.liquid -->

<div class="slider-cart-wrapper" id="slider-cart-container" >
  
  <!-- Overlay Background -->
  <div class="cart-overlay" id="cartOverlay"></div>

  <!-- Slider Cart Container -->
  <div class="slider-cart" id="sliderCart">
    
    <!-- Header -->
    <div class="slider-cart-header">
      <h2>Your Cart</h2>
      <button class="close-btn" id="closeBtn" aria-label="Close cart">&times;</button>
    </div>

    <!-- Cart Items Container -->
    <div class="cart-items" id="cartItems">
      <div class="empty-cart">
        <div class="empty-cart-icon">üõçÔ∏è</div>
        <p>Your cart is empty</p>
      </div>
    </div>

    <!-- Order Notes Section -->
    <div class="cart-notes">
      <label for="orderNotes">Add Order Notes (Optional)</label>
      <textarea id="orderNotes" placeholder="e.g., Please gift wrap this! Leave at door if not home."></textarea>
    </div>

    <!-- Footer with Totals and Checkout -->
    <div class="slider-cart-footer">
      <div class="cart-totals">
        <div class="totals-row subtotal">
          <span>Subtotal:</span>
          <span id="subtotal">$0.00</span>
        </div>
        <div class="totals-row tax">
          <span>Tax:</span>
          <span id="tax">$0.00</span>
        </div>
        <div class="totals-row total">
          <span>Total:</span>
          <span id="total">$0.00</span>
        </div>
      </div>
      <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
    </div>

  </div>

</div>

<style>
  /* ===== SLIDER CART WRAPPER ===== */
  .slider-cart-wrapper {
    z-index: 10;
  }

  /* ===== SLIDER CART MAIN ===== */
  .slider-cart {
    position: fixed;
    right: -420px;
    top: 0;
    width: 400px;
    height: 100vh;
    background: white;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.15);
    transition: right 0.3s ease-in-out;
    z-index: 12;
    display: flex;
    flex-direction: column;
    overflow-X: hidden;
    overflow-y: scroll;
  }

  .slider-cart.open {
    right: 0;
  }

  /* ===== OVERLAY ===== */
  .cart-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease-in-out;
    z-index: 1000;
  }

  .cart-overlay.open {
    background: rgba(0, 0, 0, 0.5);
    opacity: 1;
    pointer-events: auto;
  }

  /* ===== HEADER ===== */
  .slider-cart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #eee;
  }

  .slider-cart-header h2 {
    font-size: 20px;
    color: #333;
    margin: 0;
    font-weight: 600;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 28px;
    cursor: pointer;
    color: #666;
    transition: color 0.2s;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    color: #000;
  }

  /* ===== CART ITEMS CONTAINER ===== */
  .cart-items {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
  }

  /* Empty Cart State */
  .empty-cart {
    text-align: center;
    padding: 40px 20px;
    color: #999;
  }

  .empty-cart-icon {
    font-size: 48px;
    margin-bottom: 15px;
  }

  /* ===== CART ITEM ===== */
  .cart-item {
    border: 1px solid #eee;
    border-radius: 6px;
    padding: 15px;
    margin-bottom: 15px;
    background: #fafafa;
  }

  .item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
  }

  .item-header h4 {
    font-size: 16px;
    color: #333;
    margin: 0;
    flex: 1;
    font-weight: 600;
  }

  .remove-btn {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #999;
    transition: all 0.2s;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .remove-btn:hover {
    color: #ff4444;
    background: #ffe0e0;
    border-radius: 3px;
  }

  /* ===== ITEM PROPERTIES ===== */
  .item-properties {
    display: flex;
    gap: 8px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .property {
    background: white;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    border: 1px solid #ddd;
  }

  /* ===== ITEM FOOTER (Quantity & Price) ===== */
  .item-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ddd;
    padding-bottom: 15px;
    margin-bottom: 12px;
  }

  .quantity-control {
    display: flex;
    align-items: center;
    gap: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 4px;
  }

  .qty-btn {
    background: #f5f5f5;
    border: 1px solid #ddd;
    width: 32px;
    height: 32px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    transition: all 0.2s;
    padding: 0;
    border-radius: 3px;
  }

  .qty-btn:hover {
    background: #e0e0e0;
    border-color: #999;
    color: #000;
  }

  .qty-btn:active {
    background: #d0d0d0;
  }

  .qty-input {
    width: 30px;
    border: none;
    text-align: center;
    font-size: 14px;
    background: transparent;
    padding: 0;
  }

  .qty-input:focus {
    outline: none;
  }

  .item-price {
    font-weight: 600;
    font-size: 16px;
    color: #000;
  }

  /* ===== NOTES SECTION ===== */
  .cart-notes {
    padding: 20px;
    border-top: 1px solid #eee;
  }

  .cart-notes label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #333;
    font-size: 14px;
  }

  .cart-notes textarea {
    width: 100%;
    height: 80px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: inherit;
    font-size: 14px;
    resize: vertical;
  }

  .cart-notes textarea:focus {
    outline: none;
    border-color: #333;
  }

  /* ===== FOOTER ===== */
  .slider-cart-footer {
    padding: 20px;
    border-top: 1px solid #eee;
    background: #fafafa;
  }

  .cart-totals {
    margin-bottom: 20px;
  }

  .totals-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
  }

  .totals-row.subtotal {
    color: #666;
    font-size: 14px;
  }

  .totals-row.tax {
    color: #666;
    font-size: 14px;
    margin-bottom: 12px;
    border-bottom: 1px solid #ddd;
    padding-bottom: 12px;
  }

  .totals-row.total {
    font-weight: bold;
    font-size: 18px;
    color: #000;
  }

  .checkout-btn {
    display: block;
    width: 100%;
    padding: 14px;
    background: #000;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    transition: background 0.3s;
  }

  .checkout-btn:hover {
    background: #333;
  }

  /* ===== SCROLLBAR STYLING ===== */
  .cart-items::-webkit-scrollbar {
    width: 6px;
  }

  .cart-items::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  .cart-items::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 3px;
  }

  .cart-items::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  /* Product Image Styling */
  .item-content {
    display: flex;
    gap: 15px;
  }

  .item-image {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 6px;
    overflow: hidden;
    background: white;
    border: 1px solid #eee;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .item-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
    /* ===== MOBILE RESPONSIVE ===== */
    @media (max-width: 768px) {
     
      .item-footer {
          gap: 20px;
        }
      }

    @media (max-width: 480px) {
      .slider-cart {
        width: 95%;
        right: -100%;
      }
    .item-footer {
        gap: 20px;
      }
    }
</style>

<!-- Load JavaScript -->
<script src="{{ 'ct-slider-cart.js' | asset_url }}" defer></script>